<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="Gambito" constructor="FetchToSubgrid" version="1.0.7" display-name-key="Gambito.FetchToSubgrid" description-key="This control converts a FetchXml string into a subgrid." control-type="virtual" >

    <type-group name="SupportedFields">
      <type>SingleLine.Text</type>
      <type>SingleLine.TextArea</type>
      <type>Multiple</type>
    </type-group>

    <external-service-usage enabled="false" />
    
    <property name="fieldSchemaName" display-name-key="Field Schema Name" description-key="Field Schema Name" of-type="Multiple" usage="bound" required="true" />
    <!-- <property name="fetchXmlProperty" display-name-key="FetchXml Property" description-key="FetchXml or JSON string" of-type="SingleLine.Text" usage="input" required="true" /> -->
    
    <property name="RecordIdPlaceholder" display-name-key="RecordId Placeholder" description-key="Will be replaced with RecordId. ie. [RECORDID] " of-type="SingleLine.Text" usage="input" required="true" default-value="[RECORDID]" />
    <property name="ControlAnchorField" display-name-key="ControlAnchorField" description-key="Dummy text field used to place grid." of-type-group="SupportedFields" usage="bound" required="true" />
    <property name="OverriddenRecordIdFieldName" display-name-key="Overridden RecordId Field Name" description-key="If provided, and available on current form, used for RecordId" of-type="SingleLine.Text" usage="input" required="false" />

    <property name="fetchXml" display-name-key="FetchXml" description-key="FetchXml to be used to generate the results" of-type="Multiple" usage="input" required="false"/>
    <property name="defaultPageSize" display-name-key="Default Page Size" description-key="Default number of rows" of-type="Whole.None" usage="input" required="false"/>
    <property name="newButtonVisibility" display-name-key="New Button Visibility" description-key="Set true/false if you want to make the New Button enabled/disabled" of-type="Enum" required="false" default-value="1" usage="input">
      <value name="true" display-name-key="true" description-key="Enabled">1</value>
      <value name="false" display-name-key="false" description-key="Disabled">0</value>
    </property>
    <property name="deleteButtonVisibility" display-name-key="Delete Button Visibility" description-key="Set true/false if you want to make the Delete Button enabled/disabled" of-type="Enum" required="false" default-value="1" usage="input">
      <value name="true" display-name-key="true" description-key="Enabled">1</value>
      <value name="false" display-name-key="false" description-key="Disabled">0</value> 
    </property>

    <resources>
      <code path="index.ts" order="1"/>
      <platform-library name="React" version="16.8.6" />
      <platform-library name="Fluent" version="8.29.0" />
      <css path="Styles/fetchToSubgrid.css" order="1" />
    </resources>

    <feature-usage>
      <uses-feature name="Utility" required="true" /> 
      <uses-feature name="WebAPI" required="true" />
    </feature-usage>
  </control>
</manifest>
